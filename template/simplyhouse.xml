<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <template>
        <!--建筑名称，显示在插件下拉框中-->
        <name>示例建筑</name>
        <!--斗口，全局的模数因子，为了简化，无论是否有斗栱都以次为基准-->
        <dk>0.08</dk>
        <!--开间，必须设置-->
        <floor>
            <x_rooms>
                <total>3</total>
                <x1>6.16</x1>
                <x2>5.28</x2>
            </x_rooms>
            <y_rooms>
                <total>3</total>
                <y1>3.52</y1>
                <y2>3.52</y2>
            </y_rooms>
        </floor>
        <!--柱网设置，可选-->
        <!--如果不做设定，则根据开间，满做柱体-->
        <!--柱-->
        <pillers>
            <dimeter>0.45</dimeter>
            <height>4.93</height>
            <piller_source>梭柱</piller_source>
            <piller x="0" y="0" />
            <piller x="0" y="1" />
            <piller x="0" y="2" />
            <piller x="0" y="3" />
            <piller x="1" y="0" />
            <piller x="1" y="3" />
            <piller x="2" y="0" />
            <piller x="2" y="3" />
            <piller x="3" y="0" />
            <piller x="3" y="1" />
            <piller x="3" y="2" />
            <piller x="3" y="3" />
            <fang from="0/0" to="1/0" />
            <fang from="1/0" to="2/0" />
            <fang from="2/0" to="3/0" />
            <fang from="3/0" to="3/1" />
            <fang from="3/1" to="3/2" />
            <fang from="3/2" to="3/3" />
            <fang from="3/3" to="2/3" />
            <fang from="2/3" to="1/3" />
            <fang from="1/3" to="0/3" />
            <fang from="0/3" to="0/2" />
            <fang from="0/2" to="0/1" />
            <fang from="0/1" to="0/0" />
        </pillers>
        <!--墙体框架设置-->
        <frame>
            <wall_source>墙体</wall_source>
            <lingxin_source>棂心.正搭斜交</lingxin_source>
            <wall type="wall" from="0/3" to="3/3" />
            <wall type="wall" from="0/0" to="0/3" />
            <wall type="wall" from="3/3" to="3/0" />
            <wall type="window" from="0/0" to="1/0" />
            <wall type="window" from="2/0" to="3/0" />
            <wall type="door" from="1/0" to="2/0" />
        </frame>
        <!--斗栱设置-->
        <dougong>
            <piller_source>四铺作插昂柱头.join</piller_source>
            <fillgap_source>四铺作插昂柱头.join</fillgap_source>
            <corner_source>四铺作插昂转角.asset</corner_source>
        </dougong>
        <!--屋顶设置-->
        <roof>
            <roof_style>2</roof_style>
            <rafter_count>6</rafter_count>
            <tile_width>0.4</tile_width>
            <tile_length>0.5</tile_length>
            <flatTile_source>板瓦</flatTile_source>
            <circularTile_source>筒瓦</circularTile_source>
            <eaveTile_source>瓦当</eaveTile_source>
            <dripTile_source>滴水</dripTile_source>
            <ridgeTop_source>正脊筒</ridgeTop_source>
            <ridgeBack_source>垂脊兽后</ridgeBack_source>
            <ridgeFront_source>垂脊兽前</ridgeFront_source>
            <ridgeEnd_source>端头组合</ridgeEnd_source>
            <chiwen_source>螭吻</chiwen_source>
            <chuishou_source>垂兽</chuishou_source>
            <taoshou_source>套兽</taoshou_source>
            <paoshou_0_source>0-骑凤仙人</paoshou_0_source>
            <paoshou_1_source>1-龙</paoshou_1_source>
            <paoshou_2_source>2-凤</paoshou_2_source>
            <paoshou_3_source>3-狮子</paoshou_3_source>
            <paoshou_4_source>4-海马</paoshou_4_source>
            <paoshou_5_source>5-天马</paoshou_5_source>
            <paoshou_6_source>6-狎鱼</paoshou_6_source>
            <paoshou_7_source>7-狻猊</paoshou_7_source>
            <paoshou_8_source>8-獬豸</paoshou_8_source>
            <paoshou_9_source>9-斗牛</paoshou_9_source>
            <paoshou_10_source>10-行什</paoshou_10_source>
            <bofeng_source>博缝板</bofeng_source>
        </roof>
    </template>
    <template>
        <name>基本模板</name>
        <dk>0.08</dk>
        <!--柱-->
        <piller>
            <dimeter>0.5</dimeter>
            <height>4.6</height>
            <style>梭柱</style>
        </piller>
        <!--墙体设置-->
        <wall>
            <layout>1</layout>
            <style>2</style>
            <wall_source>墙体</wall_source>
            <door_height></door_height>
            <lingxin_source>棂心.正搭斜交</lingxin_source>
        </wall>
        <!--斗栱设置-->
        <dougong>
            <piller_source>四铺作插昂柱头</piller_source>
            <fillgap_source>四铺作插昂柱头</fillgap_source>
            <corner_source>四铺作插昂转角</corner_source>
        </dougong>
        <!--屋顶设置-->
        <roof>
            <roof_style>1</roof_style>
            <rafter_count>6</rafter_count>
        </roof>
    </template>
    <template>
        <name>大型宫殿</name>
        <dk>0.1</dk>
        <platform>
            <height>3.3</height>
            <extend>2.4</extend>
        </platform>
    </template>
    <template>
        <name>多层阁楼</name>
        <dk>0.05</dk>
    </template>
    <template>
        <name>小型民居</name>
        <dk>0.03</dk>
    </template>
